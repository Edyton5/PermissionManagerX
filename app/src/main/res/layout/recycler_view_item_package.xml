<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <View
    android:id="@+id/reference_indication_view"
    android:layout_width="4dp"
    android:layout_height="match_parent"/>

  <ImageView
    android:id="@+id/icon_view"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    tools:ignore="ContentDescription"/>

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
      android:id="@+id/package_label_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="1dp"
      android:textStyle="bold"
      android:maxLines="1"
      android:ellipsize="end"/>

    <TextView
      android:id="@+id/package_name_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="1dp"
      android:maxLines="1"
      android:ellipsize="end"/>

    <TextView
      android:id="@+id/package_state_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="1dp"/>

    <com.mirfatif.permissionmanagerx.ui.base.MyLinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="1dp">

      <TextView
        android:id="@+id/package_perm_count_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="1dp" />

      <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    </com.mirfatif.permissionmanagerx.ui.base.MyLinearLayout>
  </LinearLayout>
</LinearLayout>
