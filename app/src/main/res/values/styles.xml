<resources>
  <!-- Base application theme. -->
  <style name="BaseTheme" parent="Theme.AppCompat.DayNight">

    <!--Define custom attributes unique to the theme-->
    <item name="accentColor">@color/green</item>
    <item name="accentTransColor">@color/greenTrans</item>
    <item name="accentTransHighColor">@color/greenTransHigh</item>

    <!--Preference Group Titles, Dialog Button Text-->
    <item name="colorAccent">?attr/accentColor</item>

    <!--Check Boxes, Switch Active State, Indeterminate Progress Bar. If not set, uses colorAccent-->
    <!--<item name="colorControlActivated">?attr/accentColor</item>-->

    <!--Status Bar-->
    <item name="colorPrimaryDark">?attr/accentColor</item>

    <!--Action Bar-->
    <item name="colorPrimary">?attr/accentTransColor</item>

    <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    <!--<item name="alertDialogTheme">@style/myAlertDialogTheme</item>-->
  </style>

  <style name="SpinnerItemStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/button_spinner_text</item>
  </style>

  <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
    <item name="buttonBarButtonStyle">@style/AlertDialogButtonStyle</item>
    <item name="android:windowTitleStyle">@style/AlertDialogTitleStyle</item>
  </style>

  <!--Overrides disabled button color too-->
  <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">?attr/accentColor</item>
  </style>

  <!--Does not work-->
  <style name="AlertDialogTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
    <item name="maxLines">1</item>
    <item name="autoSizeTextType">uniform</item>
  </style>

  <!--============== About Activity ==============-->

  <style name="AboutActivityItemContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <style name="AboutActivityIconImg">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginEnd">8dp</item>
  </style>

  <style name="AboutActivityItemTextBox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="AboutActivityItemTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AboutActivityItemSummary">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">2dp</item>
    <item name="android:textAlignment">viewStart</item>
  </style>

  <!--============== Common Styles ==============-->

  <style name="BgColorControlNormal">
    <item name="android:background">@color/colorControlNormal</item>
  </style>

  <style name="ListSeparator" parent="BgColorControlNormal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
  </style>

  <style name="ListSeparatorDim" parent="ListSeparator">
    <item name="android:alpha">0.25</item>
  </style>

  <style name="CustomButton" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/button_spinner_text</item>
  </style>

</resources>
